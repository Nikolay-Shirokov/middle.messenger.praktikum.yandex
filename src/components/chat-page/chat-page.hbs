<main class="chat-page">
  <section class="sidebar">
    <a href="/profile" class="sidebar__link active-element">Профиль ></a>
    <form class="search">
      <input class="search__input" type="text" placeholder="Поиск" />
      <div class="search__icon"></div>
    </form>
    <ul class="sidebar__chat-list">
      {{#each chatList}}
      <li class="sidebar__chat active-element {{#if active}}sidebar__chat_active{{/if}}">
        <div class="sidebar__chat-avatar"></div>
        <h6 class="sidebar__chat-title">{{ title }}</h6>
        <p class="sidebar__chat-message">{{#if itMyMessage}}<span class="sidebar__chat-message-author">Вы: </span>{{/if}}{{ lastMessage }}</p>
        <time class="sidebar__message-date">{{ lastMessageDateText }}</time>
        <p class="sidebar__messages-qty">{{ qtyUnreadMessages }}</p>
      </li>
      {{/each}}
    </ul>
  </section>
  <div class="chat-page__separator"></div>
  <section class="chat">
    <div class="chat__empty">
      <p class="chat__empty-text">Выберите чат чтобы отправить сообщение</p>
    </div>
    <div class="chat__header">
      <div class="chat__logo"></div>
      <h3 class="chat__title">{{chatTitle}}</h3>
      <p class="chat__space"></p>
      <button class="chat__menu-button active-element"></button>
    </div>
    <ul class="chat__message-list">
      {{#each messages}}
      {{#if itDate }}
      <li class="chat__message chat__message_type_date"><time datetime="{{date}}">{{dateText}}</time></li>
      {{else}}
      <li class="chat__message {{#if itMyMessage}}chat__message_author_me{{else}}chat__message_author_other{{/if}}">
        {{#if text}}
        <p class="chat__message-text">{{text}}</p>
        {{/if}}
        {{#if imageUrl}}
        <img class="chat__message-media" src={{imageUrl}} alt="">
        {{/if}}
        <span class="chat__message-status {{#if statusRead}}chat__message-status_value_read{{/if}}"></span>
        <time class="chat__message-date" datetime="{{messageDate}}">{{messageDateText}}</time>
      </li>
      {{/if}}
      {{/each}}
    </ul>
    <form class="chat__footer">
      <button class="chat__attachment-menu-button active-element"></button>
      <input class="chat__message-input" name="message" type="text" placeholder="Сообщение">
      <button class="chat__message-send-button active-element" type="submit"></button>
    </form>
  </section>

</main>
